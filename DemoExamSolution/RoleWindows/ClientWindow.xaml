<Window x:Class="DemoExamSolution.RoleWindows.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoExamSolution.RoleWindows"
        mc:Ignorable="d"
        Icon="/Resources/Icon.ico"
        FontFamily="Times New Roman"
        Title="Товары(клиент)" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#00FA9A">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackBtn"
                    Grid.Column="0"
                    Content="← Назад"
                    Margin="15,0,0,0"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="14"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BackBtn_Click"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Список товаров"  Foreground="White" FontSize="20" FontWeight="ExtraBold" 
               VerticalAlignment="Center" HorizontalAlignment="Center"
               Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,15,0">
                <TextBlock x:Name="UserNameTextBlock"
                   Text="{Binding CurrentUser.FullName}"
                   Foreground="White"
                   FontSize="12"
                   FontWeight="Bold"
                   VerticalAlignment="Center">
                </TextBlock>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProductsListBox" Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5"
                    Width="750" Height="280"
                    HorizontalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F0F8FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                Background="#F5F5F5" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1"
                                CornerRadius="3"
                                Width="100" Height="100"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                                    <Image Source="{Binding PhotoPath, FallbackValue=/Resources/picture.png}"
                                   Stretch="Uniform"
                                   MaxWidth="90" MaxHeight="90"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <!-- Категория и Наименование -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="{Binding CategoryName}" 
                                           FontWeight="Bold" 
                                           FontSize="14"/>
                                        <TextBlock Text=" | " 
                                           Foreground="Gray"/>
                                        <TextBlock Text="{Binding ProductName}" 
                                           FontWeight="Bold" 
                                           FontSize="14"/>
                                    </StackPanel>

                                    <!-- Описание товара -->
                                    <TextBlock Text="Описание товара:" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Foreground="Gray"
                                       Margin="0,5,0,2"/>
                                    <TextBlock Text="{Binding Description}" 
                                       FontSize="11" 
                                       TextWrapping="Wrap"
                                       MaxHeight="30"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="0,0,0,5"/>

                                    <!-- Производитель -->
                                    <TextBlock Text="Производитель:" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Foreground="Gray"
                                       Margin="0,5,0,2"/>
                                    <TextBlock Text="{Binding Manufacturer}" 
                                       FontSize="11"
                                       Margin="0,0,0,5"/>

                                    <!-- Поставщик -->
                                    <TextBlock Text="Поставщик:" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Foreground="Gray"
                                       Margin="0,5,0,2"/>
                                    <TextBlock Text="{Binding Supplier}" 
                                       FontSize="11"
                                       Margin="0,0,0,5"/>

                                    <!-- Цена -->
                                    <TextBlock Text="Цена:" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Foreground="Gray"
                                       Margin="0,5,0,2"/>
                                    <TextBlock Text="{Binding Price, StringFormat={}{0:N2} руб.}" 
                                       FontSize="11" 
                                       FontWeight="Bold" 
                                       Foreground="Red"
                                       Margin="0,0,0,5"/>

                                    <!-- Единица измерения -->
                                    <TextBlock Text="Единица измерения:" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Foreground="Gray"
                                       Margin="0,5,0,2"/>
                                    <TextBlock Text="{Binding UnitOfMeasurement}" 
                                       FontSize="11"
                                       Margin="0,0,0,5"/>

                                    <!-- Количество на складе -->
                                    <TextBlock Text="Количество на складе:" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Foreground="Gray"
                                       Margin="0,5,0,2"/>
                                    <TextBlock Text="{Binding QuantityInStock}" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                                </StackPanel>


                                <Border Grid.Column="2" 
                                BorderThickness="1"
                                CornerRadius="5" 
                                Width="80" Height="60"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="Действующая скидка" 
                                           FontSize="9" 
                                           Foreground="Gray" 
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                                        <TextBlock Text="{Binding Discount}" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#2E8B57" 
                                           HorizontalAlignment="Center"/>
                                        <TextBlock Text="%" 
                                           FontSize="12" 
                                           Foreground="#2E8B57" 
                                           HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
